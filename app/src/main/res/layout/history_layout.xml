<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="15dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/secondary_background_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv_user_uestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:text="@string/question"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/basic_white" />


            <ImageView
                android:id="@+id/iv_user_choice_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/tv_user_uestion"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_user_choice_image"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/iv_user_choice_image"
                android:text="@string/option_1"
                android:textColor="@color/basic_white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_user_answer"/>


            <ImageView
                android:id="@+id/iv_correct_answer_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/iv_user_choice_image"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_correct_answer_image"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/iv_correct_answer_image"
                android:text="@string/option_2"
                android:textColor="@color/basic_white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_correcct_answer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="vinay"
                android:textColor="@color/basic_white"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_time_taken_by_user"
                android:layout_toRightOf="@+id/tv_user_answer"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
